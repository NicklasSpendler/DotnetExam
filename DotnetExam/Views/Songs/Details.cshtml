@model DotnetExam.Models.Song

@{
    ViewData["Title"] = "Details for this song";
}

<h1>Details</h1>

<div>
    <h4>Song</h4>
    <hr />
    <dl class="row">

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class = "col-sm-2">
            @if(@Model.artist != null)
            {
                @Html.DisplayNameFor(model => model.artist.Name)
            }
        </dt>
        
        <dd class = "col-sm-10">
        @if(@Model.artist != null)
        {
            <a class="anchorOfItem" href="/Artists/Details/@Model.artist.Id">
                @Html.DisplayFor(model => model.artist.Name)
            </a>
        }
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.albums)
        </dt>


@if(@Model.albums != null){
    @foreach (var album in Model.albums)
        {
            <div class=row>
                <div class="col-md-4">
                    <div>
                        <a class="anchorOfItem" href="/Albums/Details/@album.Id">
                        @Html.DisplayFor(model => album.Name)
                        </a>
                        <br>
                    </div>
                </div>
            </div>
        }
    }


        <dt class="col-sm-2" >
        @Html.DisplayNameFor(model => model.comments)
        </dt>

    
    @if (@Model.comments != null)
    {
        @foreach (var comment in Model.comments)
        {
            <div class= row>
                <div class="col-md-4">
                    <div>
                        @comment.user.Email
                    </div>
                    <div>
                        @comment.Text
                    </div>
                </div>
            </div>
        }
    }
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

</div>
</dl>