@model DotnetExam.Models.SongAlbumListDTO;

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Song</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Song.Name" class="control-label"></label>
                <input asp-for="Song.Name" class="form-control" />
                <br />
                <label asp-for="Song.artist" class="control-label">Choose Artist</label>
                <select asp-for="Song.ArtistId" class="form-control" asp-items="ViewBag.Artists"></select>
                <br />
                <label asp-for="AlbumIds" class="control-label">Choose Album</label>
                <select asp-for="AlbumIds" class="form-control" asp-items="ViewBag.albums" multiple></select>


                <span asp-validation-for="Song.Name" class="text-danger"></span>
                <span asp-validation-for="Song.ArtistId" class="text-danger"></span>
                <span asp-validation-for="AlbumIds" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
